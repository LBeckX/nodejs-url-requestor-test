{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}
